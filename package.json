{
  "name": "decky-script-runner",
  "version": "0.0.1",
  "description": "Run, manage, and edit scripts. With a focus on flexibility, it supports running multiple scripts simultaneously, editing and uploading script through the integrated sideloader, and sharing scripts within a community-driven repository, Also supports multiple scripting languages such as Javascript (Node),Bash, Python, Perl, Lua, Ruby and PHP, this plugin is a must-have for any Steam Deck user.",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gr3gorywolf/decky-script-runner.git"
  },
  "keywords": [
    "decky",
    "plugin",
    "plugin-template",
    "steam-deck",
    "deck"
  ],
  "author": "Gr3gorywolf <gregoryalexandercabral@gmail.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/Gr3gorywolf/decky-script-runner/issues"
  },
  "homepage": "https://github.com/Gr3gorywolf/decky-script-runner#readme",
  "devDependencies": {
    "@decky/rollup": "^1.0.1",
    "@decky/ui": "^4.8.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/webpack": "^5.28.5",
    "rollup": "^4.22.5",
    "rollup-plugin-postcss": "^4.0.2",
    "typescript": "^5.6.2"
  },
